<!DOCTYPE html>

<html>

<head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title Fire Safe Farm</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

        <!--tab icon-->
        <link rel="icon" href="~/Images/logox.png" />

        <!--My stylesheet link-->
        <link rel="stylesheet" href="~/Content/jdstyle.css" />


        <!--Bootstrap 5 links-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    </head>


<body>

    <header>



        <nav id="mynav" class="navbar navbar-expand-lg navbar-light">

            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav_container" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="nav_container">
                    <a class="navbar-brand" href="@Url.Action("Index","Home")"><img src="~/Images/logox.png" id="logo" style="width:120px;padding-left:30px;margin-top:-30px;" /></a>
                    <ul class="navbar-nav col-lg-10" style="padding-left:50px; padding-top:20px;">
                        <li class="nav-item" style="padding-left:50px;padding-right:25px;">
                            <a class="btn btn-info" id="nav_txt" role="button" href="@Url.Action("IndiMap", "Home")">Safety</a>
                        </li>
                        <li class="nav-item" style="padding-left:25px;padding-right:25px;">
                            <a class="btn btn-info" id="nav_txt" role="button" href="@Url.Action("Animation", "Home")">Guidelines</a>
                        </li>
                        <li class="nav-item" style="padding-left:25px;padding-right:25px;">
                            <a class="btn btn-info" id="nav_txt" role="button" href="@Url.Action("Permit", "Home")">Permits</a>
                        </li>
                        
                    </ul>

                </div>
            </div>
        </nav>
        <style>
            .navbar-nav {
                display: inline-flex;
                list-style: none;
                position: relative;
            }


            #nav_txt {
                padding-left: 20px;
                padding-right: 20px;
                padding-top: 10px;
                padding-bottom: 10px;
                font-weight: bold;
                font-size: 20px;
                text-decoration: none;
                font-family: 'Roboto-light';
                color: #00000a;
            }

            .btn {
                background-color: #00000000;
                font-size: 1.2rem;
                border-radius: .5rem;
            }


                .btn:hover {
                    background-color: #e5af7c;
                    border-color: antiquewhite;
                }

            .btn-info {
                border-color: #ffffff40;
            }

            .navbar-collapse {
                padding-top: 22px;
            }

            .navbar {
                position: relative;
                display: flex;
                flex-wrap: wrap;
                align-items: center;
                justify-content: space-between;
                padding-top: .5rem;
                padding-bottom: .5rem;
                z-index: 200;
                background-color: #ffffff90;
                backdrop-filter: blur(10px);
            }


            #mynav {
                z-index: 400;
                box-shadow: 10px 10px 20px #00000060;
            }
        </style>
    </header>








    @RenderBody()



    <hr />
    <div class="container body-content">
        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year - Epoch <img src="~/images/team1.png" style="width:30px;" /></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

   
</html>
