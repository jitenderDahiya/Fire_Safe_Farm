        function toggle(sdt, edt, tfb) {

            $(".txt_burnoff").collapse('hide');
            $(".txt_s40").collapse('hide');
            $(".txt_s13").collapse('hide');
            $(".txt_s14").collapse('hide');

            var d = new Date();
            var sdt = new Date(sdt);
            var edt = new Date(edt);


            if (tfb == 'true') {
                $(".txt_burnoff").collapse('show');
                var button = document.getElementById("burnoffNF");
                button.innerHTML = 'Burn-off Notify Form <img src="/images/tick.png" style="width:45px;height:100%"/>';

                $(".txt_s40").collapse('show');
                var button = document.getElementById("s40NF");
                button.innerHTML = 'Total Fire Ban (Section 40) Permit <img src="/images/tick.png" style="width:45px;height:100%"/>';

                $(".txt_s13").collapse('hide');
                $(".txt_s14").collapse('hide');
            } else if (tfb == 'false' && d >= sdt && d <= edt) {

                $(".txt_burnoff").collapse('show');
                var button = document.getElementById("burnoffNF");
                button.innerHTML = 'Burn-off Notify Form <img src="/images/tick.png" style="width:45px;height:100%"/>';
                $(".txt_s13").collapse('show');
                var button = document.getElementById("s13NF");
                button.innerHTML = 'Fire Danger Period (Schedule 13) Permit <img src="/images/tick.png" style="width:45px;height:100%"/>';
                $(".txt_s14").collapse('show');
                var button = document.getElementById("s14NF");
                button.innerHTML = 'Fire Danger Period (Schedule 14) Permit <img src="/images/tick.png" style="width:40px;height:100%"/>';

                $(".txt_s40").collapse('hide');

            } else {
                $(".txt_burnoff").collapse('show');
                var button = document.getElementById("burnoffNF");
                button.innerHTML = 'Burn-off Notify Form <img src="/images/tick.png" style="width:45px;height:100%"/>';

                $(".txt_s13").collapse('hide');
                $(".txt_s14").collapse('hide');
                $(".txt_s40").collapse('hide');

            }


        }

    </script>

